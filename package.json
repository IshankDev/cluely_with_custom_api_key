{
  "name": "ai-overlay-assistant",
  "version": "1.0.0",
  "description": "A lightweight desktop assistant app with transparent overlay, clipboard monitoring, and dual AI backend support (Ollama + Gemini)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:check": "node scripts/build.js",
    "build:all": "node scripts/build.js all",
    "build:mac-check": "node scripts/build.js mac",
    "build:win-check": "node scripts/build.js win",
    "build:linux-check": "node scripts/build.js linux",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install"
  },
  "keywords": [
    "electron",
    "ai",
    "overlay",
    "clipboard",
    "ollama",
    "gemini",
    "desktop",
    "assistant"
  ],
  "author": "AI Overlay Assistant Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "task-master-ai": "^0.25.1",
    "typescript-eslint": "^8.41.0"
  },
  "build": {
    "appId": "com.aioverlay.assistant",
    "productName": "AI Overlay Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!node_modules/**/*",
      "!**/*.map",
      "!**/*.ts",
      "!.git/**/*",
      "!dist/**/*",
      "!build/**/*"
    ],
    "extraResources": [
      {
        "from": "build/",
        "to": "build/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Overlay Assistant"
    },
    "dmg": {
      "title": "AI Overlay Assistant",
      "icon": "build/icon.icns",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-store": "^10.1.0"
  }
}